{% extends 'base.html.twig' %}

{% block title %}Order food{% endblock %}

{% block body %}
    <h3>List of restaurants</h3>
    <div id="listOfRestaurants" class="row mt-4">
        {% for restaurant in restaurants %}
            <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                <a class="text-dark" href="{{ path('restaurant', {id: restaurant.id}) }}">
                    <div class="card">
                        <div class="card-body d-flex justify-content-center p-5">
                            {{ restaurant.name }}
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
{% block customJS %}
    <script>
        const selector = document.querySelectorAll('.card');
    </script>
    {{ encore_entry_script_tags('animation_appear') }}
{% endblock %}